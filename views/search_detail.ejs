<%include includes/header.ejs%>
<section id="One" class="wrapper style3">
    <div class="inner">
        <header class="align-center">
            <style>
                @media screen and (min-width: 480px) {
                    #brs, #brs1{
                        display:none;
                    }
                }
            </style>
            <div id="brs">
                <br>
            </div>
            <p>Search books</p>
            <h2>검 색</h2>
        </header>
    </div>
</section>
<section id="two" class="wrapper style2">
    <div class="inner">
        <div class="box">
            <div class="content">
                <style>
                    @media screen and (max-width: 1280px) {
                        #imgs{
                            display:none;
                        }
                        #happys{
                            width:100%;
                        }
                    }
                    @media screen and (min-width: 1281px) {
                        #imgmsg{
                            display:none;
                        }
                        #happys{
                            width:70%;
                        }
                    }
                </style>
                <div class="row uniform">
                    <span id="imgmsg">< 페이지 크기가 작으면 이미지를 불러올 수 없습니다. 웹으로 확인해 주세요. ></span>
                    <img id="imgs" src="/images/<%= book_data[0].img_src%>" style="height: 284px;padding-top: 0px;padding-left: 20px;width: 250px;">
                    <div id="happys" class="9u 12u$(small)"style="padding-top: 0px;padding-left: 10px;">
                        <div class="table-wrapper" >
                            <table class="alt">
                                <tbody>
                                <tr>
                                    <td style="width:100px; text-align:center; vertical-align:middle;">제목</td>
                                    <td><%= book_data[0].title%></td>
                                </tr>
                                <tr>
                                    <td style="width:120px; text-align:center; vertical-align:middle;">저자</td>
                                    <td><%= book_data[0].writer%></td>
                                </tr>
                                <tr>
                                    <td style="width:120px; text-align:center; vertical-align:middle;">출판사</td>
                                    <td><%= book_data[0].publisher%></td>
                                </tr>
                                <tr>
                                    <td style="width:120px; text-align:center; vertical-align:middle;">도서관 현황</td>
                                    <td>이 책은 도서관에 <%= book_data[0].QoB%>권이 있습니다.</td>
                                </tr>
                                <tr>
                                    <td style="width:120px; text-align:center; vertical-align:middle;">대출 현황</td>
                                    <%if(book_data[0].QoB_state<=0){%>
                                        <td>대출 가능한 책이 없습니다.</td>
                                    <%}else{%>
                                        <td>대출 가능 (현재 <%= book_data[0].QoB_state%>권 보유)</td>
                                    <%}%>
                                </tr>
                                <tr>
                                    <td style="width:120px; text-align:center; vertical-align:middle;">이미지 출처</td>
                                    <td><a href=<%= book_data[0].img_source%> target="_blank">이동하기</a></td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <br>
                <style>
                    @media screen and (max-width: 480px) { /* 모바일 접속 시 깨져 나오는 현상 수정. */
                        #Menus{
                            position: relative;
                            top: 50px;
                        }
                        #sm{
                            position: relative;
                            bottom: 45px;
                        }
                    }
                </style>
                <a id="Menus" style="float:right;margin-left:20px;" href="/search" class="button">목록</a>
                <%if(book_data[0].QoB_state!=0){%>
                    <form id="form_submit" action="/search/detail/<%= book_data[0].book_value%>" method="post">
                        <a id="sm" style="float:right;" class="button special" onclick="window.open('/search/find_book_first/<%= book_data[0].book_value%>','find_book','width=670, height=700, menubar=no, status=no, toolbar=no, scrollbars=no')">찾기</a>
                    </form>
                <%}%>
                <br>
                <div id="brs1">
                    <br>
                </div>
            </div>
        </div>

    </div>
</section>
<%include includes/footer.ejs%>
